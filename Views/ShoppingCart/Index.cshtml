@model List<CartProductData>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "_Layout";
}

<h2>Shopping Cart</h2>

<div class="my-3">
    <a asp-controller="Order" asp-action="Create" class="btn btn-primary">Order</a>
</div>

<div class="d-flex flex-wrap gap-3">
    @foreach(var cartProduct in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@cartProduct.Product.ImageUrl" class="card-img-top" alt="@cartProduct.Product.ImageAltText">
            <div class="card-body">
                <h5 class="card-title text-center">@cartProduct.Product.Name</h5>
                <p class="card-text text-center">@cartProduct.Product.Description</p>
                <p class="card-text text-center">@(cartProduct.Product.Price) Coins</p>
                <a asp-action="RemoveFromCart" asp-route-id="@cartProduct.Product.Id" class="btn btn-danger">Remove from Cart</a>
            </div>
            <strong class="m-3 mt-0">x @cartProduct.Quantity</strong>
        </div>
    }
</div>