@model Product[]

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "_Layout";
}

<h2>Shopping Cart</h2>

<a asp-controller="Order" asp-action="Create" class="btn btn-primary">Order</a>

<div class="d-flex flex-wrap gap-3">
    @foreach(var product in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@product.ImageUrl" class="card-img-top" alt="@product.ImageAltText">
            <div class="card-body">
                <h5 class="card-title text-center">@product.Name</h5>
                <p class="card-text text-center">@product.Description</p>
                <p class="card-text text-center">@(product.Price) Coins</p>
                <a asp-action="RemoveFromCart" asp-route-id="@product.Id" class="btn btn-danger">Remove from Cart</a>
            </div>
        </div>
    }
</div>